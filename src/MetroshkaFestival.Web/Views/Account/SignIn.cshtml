@model MetroshkaFestival.Application.Commands.Records.Account.SignInCommandRecord
@{
    ViewData["Title"] = "Авторизация";
    Layout = "_UnauthorizedLayout";
}
<style type="text/css"></style>
<h2 class="form-group row mt-4 justify-content-center">Вход в систему</h2>

<form method="post" asp-controller="Account" asp-action="SignIn" asp-antiforgery="true">
    <div class="form-horizontal">
        <hr/>
        <div class="form-group row justify-content-center">
            <div class="col-sm-1">
                <label asp-for="Username"></label>
            </div>
            <div class="col-sm-3">
                <input type="text" asp-for="Username" class="form-control" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-sm-1">
                <label asp-for="Password"></label>
            </div>
            <div class="col-sm-3">
                <input asp-for="Password" type="password" class="form-control" required/>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <div class="col-sm-offset-2 justify-content-center">
                <input type="submit" value="Вход" class="btn btn-success w-25"/>
            </div>
        </div>
        
        <div class="row justify-content-sm-center">
            <div asp-validation-summary="All" class="text-danger row mt-4 w-25"></div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/js/checkInvalid.js"></script>
}