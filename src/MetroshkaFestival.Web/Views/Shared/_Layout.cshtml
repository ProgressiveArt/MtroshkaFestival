<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>

<header class="sticky-top row">
    <div class="col-3 p-0 m-0"></div>
    <nav class="navbar navbar-expand-lg col-6 p-0 m-0" style="height: 50px">
        <div class="col-2 navbar-brand p-0 m-0">
            <a asp-controller="Home" asp-action="Index">
                <img class="invert-color" src="~/images/elements/logotype.svg" width="100%" alt="">
            </a>
        </div>
        @RenderSection("Header")
    </nav>
</header>
<img src="~/images/elements/Divider.png" width="100%" class="rounded mx-auto d-block" alt="">

<main>
    <div class="container bg-darker">
        <div role="main" class="pb-3">
            @RenderBody()
        </div>
    </div>
</main>

<img src="~/images/elements/Divider.png" width="100%" class="rounded mx-auto d-block mt-3" alt="">
<footer class="text-center">
    <div class="d-flex flex-column">
        <span class="text-color-ver version">Version 1.1</span>
        <span class="lead contacts">
            powered by <a href="https://github.com/ProgressiveArt" class="text-decoration-none text-color-link">@@ProgressiveArt</a>
        </span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>