@using MetroshkaFestival.Web.HtmlHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/nav-bar-profile.css"/>
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
        <div class="container justify-content-center">
            @if (Html.GetLogin(User) != "Anonim")
            {
                <a class="navbar-brand col-sm" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Фестиваль "МЕТРОШКА" - Admin panel</a>
                <div class="col-sm">
                    <div class="nav nav-pills row p-0 mt-1 mb-1">
                        <div class="nav-item text-end">
                            <a class="btn btn-danger" asp-controller="Account" asp-action="SignOut">Выход</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <a class="navbar-brand col-sm" asp-area="Admin" asp-controller="Home" asp-action="Index">Фестиваль "МЕТРОШКА"</a>
                <div class="col-sm">
                    <div class="nav nav-pills row p-0 mt-1 mb-1">
                        <div class="nav-item text-end">
                            <a class="btn btn-success" asp-controller="Account" asp-action="SignIn">Вход</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </nav>
</header>

<main>
    <div class="container body-content navbar-light bg-light">
        <div role="main">
            @RenderBody()
        </div>
    </div>
</main>

<footer class="text-center">
    <div class="dropdown-divider"></div>
    <div class="d-flex flex-column">
        <span class="text-color-ver version">Version 1.1</span>
        <span class="lead contacts">
            powered by <a href="https://github.com/ProgressiveArt" class="text-decoration-none text-color-link">@@ProgressiveArt</a>
        </span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jQuery UI - v1.12.1.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>