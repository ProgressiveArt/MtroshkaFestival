@using Microsoft.AspNetCore.Identity
@using MetroshkaFestival.Data.Entities
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager

<ul class="navbar-nav">
@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div class="nav-link text-dark" >Hello @User.Identity.Name!</div>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="SignOut">Sign out</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">SignIn</a>
    </li>
}
</ul>
