<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/nav-bar-profile.css"/>
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
        <div class="container justify-content-center">
            <a class="navbar-brand col-sm" asp-controller="Tournament" asp-action="Index">Фестиваль "МЕТРОШКА"</a>
        </div>
    </nav>
</header>

<main>
    <div class="container body-content navbar-light bg-light">
        <div role="main">
            @RenderBody()
        </div>
    </div>
</main>

<footer class="text-center">
    <hr/>
    <div class="d-flex flex-column">
        <span class="text-color-ver version">Version 1.1</span>
        <span class="lead contacts">
            powered by <a href="https://github.com/ProgressiveArt" class="text-decoration-none text-color-link">@@ProgressiveArt</a>
        </span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/css/bootstrap.css"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>