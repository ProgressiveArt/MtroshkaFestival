@model MetroshkaFestival.Application.Commands.Records.AgeCatehories.AddAgeCategoryCommandRecord
@{
    ViewData["Title"] = "Добавление возрастной категории";
    ViewData["Controller"] = "AgeCategory";
}
<h2 class="mt-3 col-sm text-center">@ViewBag.Title</h2>

<form asp-action="AddAgeCategory" method="post" class="container mt-4 col-8 rounded pr-4 pl-4 pb-2" enctype="multipart/form-data">
    <input data-val="true" asp-for="ReturnUrl" type="hidden" value="@Model?.ReturnUrl"/>

    <div class="form-group row pt-4">
        <div class="col-md-4">
            <label asp-for="AgeGroup" class="control-label col-form-label">Год проведения</label>
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(x => x.AgeGroup, ViewBag.AgeGroups as IEnumerable<SelectListItem>, new {@class = "form-control border-violet"})
            <span class="invalid-feedback" asp-validation-for="AgeGroup" aria-required="true"></span>
        </div>
    </div>
    <div class="form-group row pt-4">
        <div class="col-md-4">
            <label asp-for="MinBirthYear" class="control-label col-form-label">Минимальный год рождения</label>
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(x => x.MinBirthYear, ViewBag.Years as IEnumerable<SelectListItem>, new {@class = "form-control border-violet"})
            <span class="invalid-feedback" asp-validation-for="MinBirthYear" aria-required="true"></span>
        </div>
    </div>
    <div class="form-group row pt-4">
        <div class="col-md-4">
            <label asp-for="MaxBirthYear" class="control-label col-form-label">Максимальный год рождения</label>
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(x => x.MaxBirthYear, ViewBag.Years as IEnumerable<SelectListItem>, new {@class = "form-control border-violet"})
            <span class="invalid-feedback" asp-validation-for="MaxBirthYear" aria-required="true"></span>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <input class="btn btn-success mt-2 col-4" type="submit" value="Добавить"/>
        <div class="form-group row justify-content-center mt-2">
            <a class="btn btn-danger btn-block col-4 text-center" asp-area="Admin" asp-controller="AgeCategory" asp-action="Index">Отменить</a>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div asp-validation-summary="All" class="text-danger row mt-4 w-50"></div>
    </div>
</form>

@section Scripts
{
    <script src="~/js/checkInvalid.js"></script>
}